<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 圆角 -->
    <corners android:radius="16dp" />

    <!-- 星空蓝渐变 -->
    <gradient
        android:angle="270"
    android:startColor="#1A56DB"
    android:endColor="#3B82F6"
    android:type="linear" />

    <!-- 星星点缀效果（使用小圆形模拟） -->
    <item>
        <shape android:shape="oval">
            <size android:width="4dp" android:height="4dp" />
            <solid android:color="#FFFFFF" />
            <padding
                android:left="20dp"
                android:top="15dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:width="3dp" android:height="3dp" />
            <solid android:color="#FFFFFF" />
            <padding
                android:left="70dp"
                android:top="30dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:width="2dp" android:height="2dp" />
            <solid android:color="#FFFFFF" />
            <padding
                android:left="40dp"
                android:top="60dp" />
        </shape>
    </item>
    <!-- 可添加更多星星 -->
</shape>